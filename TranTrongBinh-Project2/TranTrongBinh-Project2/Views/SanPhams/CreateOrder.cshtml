@model TranTrongBinh_Project2.Models.SanPham

@{
    ViewBag.Title = "Tạo Đơn Hàng";
}

<h2>Tạo Đơn Hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() <!-- Thêm dòng này để chèn token bảo mật vào form -->

    <div class="form-group">
        <label>Sản Phẩm</label>
        <p>@Model.TenSanPham</p>
    </div>

    <div class="form-group">
        <label>Giá</label>
        <p>@Model.Gia.ToString("C")</p>
    </div>

    <div class="form-group">
        <label>Số Lượng</label>
        <input type="number" name="quantity" min="1" value="1" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Đặt Hàng</button>
}

<a href="@Url.Action("Index", "SanPhams")" class="btn btn-secondary">Trở về danh sách sản phẩm</a>
